{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"outDir": "dist",
		"rootDir": "src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		},
		"moduleDetection": "force"
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist", "tests"]
}
