{
	"name": "ethos",
	"version": "1.0.0",
	"description": "Ethos crawls then serves digital rights organizations' publications through its API.",
	"bin": {
		"ethos": "dist/index.js"
	},
	"scripts": {
		"lint": "biome check .",
		"format": "biome format --write .",
		"commit": "git-cz",
		"prepare": "lefthook install",
		"watch": "tsc --watch",
		"build": "vite build",
		"start": "node dist/index.js",
		"test": "vitest run",
		"test:coverage": "vitest run --coverage",
		"test:watch": "vitest --watch",
		"clean": "rm -rf dist"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/nipsysdev/Ethos/"
	},
	"author": "Xavier Saliniere <bonjour@xaviers.sh>",
	"license": "MIT",
	"type": "module",
	"bugs": {
		"url": "https://github.com/nipsysdev/Ethos/issues"
	},
	"homepage": "https://github.com/nipsysdev/Ethos#readme",
	"engines": {
		"node": "^22.0.0"
	},
	"dependencies": {
		"better-sqlite3": "^12.2.0",
		"commander": "^14.0.0",
		"inquirer": "^9.2.12",
		"puppeteer": "^24.11.2",
		"puppeteer-extra": "^3.3.6",
		"puppeteer-extra-plugin-adblocker": "^2.13.6",
		"puppeteer-extra-plugin-stealth": "^2.11.2",
		"yaml": "^2.6.1"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.0.6",
		"@commitlint/cli": "^19.8.1",
		"@commitlint/config-conventional": "^19.8.1",
		"@types/better-sqlite3": "^7.6.13",
		"@types/inquirer": "^9.0.7",
		"@types/node": "^24.0.10",
		"@vitest/coverage-v8": "3.2.4",
		"commitizen": "^4.3.1",
		"cz-conventional-changelog": "^3.3.0",
		"lefthook": "^1.11.16",
		"ts-node": "^10.9.2",
		"tsc-alias": "^1.8.16",
		"tsx": "^4.7.0",
		"typescript": "^5.8.3",
		"vite": "^5.2.0",
		"vitest": "^3.2.4"
	},
	"pnpm": {
		"overrides": {
			"whatwg-url": "^14.0.0"
		}
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	}
}
