{
	"name": "ethos-crawler",
	"version": "1.2.0",
	"description": "Web crawler and API for aggregating and serving digital rights organizations' publications.",
	"bin": {
		"ethos": "dist/ethos.js"
	},
	"main": "dist/ethos.js",
	"files": [
		"dist",
		"README.md",
		"LICENSE"
	],
	"keywords": [
		"web-crawler",
		"web-scraping",
		"cli",
		"api",
		"content-extraction",
		"digital-rights",
		"puppeteer",
		"typescript"
	],
	"preferGlobal": true,
	"scripts": {
		"lint": "biome check .",
		"format": "biome format --write .",
		"commit": "git-cz",
		"prepare": "lefthook install",
		"watch": "tsc --watch",
		"build": "vite build",
		"start": "node dist/ethos.js",
		"crawl": "node dist/ethos.js crawl",
		"test": "vitest run",
		"test:integration": "INT_TEST=true vitest run src/tests/integration",
		"test:coverage": "vitest run --coverage",
		"test:watch": "vitest --watch",
		"clean": "rm -rf dist"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/nipsysdev/Ethos/"
	},
	"author": "Xavier Saliniere <bonjour@xaviers.sh>",
	"license": "MIT",
	"type": "module",
	"bugs": {
		"url": "https://github.com/nipsysdev/Ethos/issues"
	},
	"homepage": "https://github.com/nipsysdev/Ethos#readme",
	"engines": {
		"node": ">=22.0.0"
	},
	"dependencies": {
		"better-sqlite3": "^12.2.0",
		"commander": "^14.0.1",
		"dayjs": "^1.11.18",
		"express": "^5.1.0",
		"inquirer": "^9.3.7",
		"jsdom": "^26.1.0",
		"puppeteer": "^24.20.0",
		"turndown": "^7.2.1"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.4",
		"@commitlint/cli": "^19.8.1",
		"@commitlint/config-conventional": "^19.8.1",
		"@types/better-sqlite3": "^7.6.13",
		"@types/express": "^5.0.3",
		"@types/inquirer": "^9.0.9",
		"@types/jsdom": "^21.1.7",
		"@types/node": "^24.3.1",
		"@types/turndown": "^5.0.5",
		"@vitest/coverage-v8": "3.2.4",
		"commitizen": "^4.3.1",
		"cz-conventional-changelog": "^3.3.0",
		"lefthook": "^1.13.0",
		"ts-node": "^10.9.2",
		"tsc-alias": "^1.8.16",
		"tsx": "^4.20.5",
		"typescript": "^5.9.2",
		"vite": "^5.4.20",
		"vitest": "^3.2.4"
	},
	"pnpm": {
		"overrides": {
			"whatwg-url": "^14.0.0"
		}
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	}
}
